{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "removeComments": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true
    },

    "files": [
        "app/app.module.ts",
        "app/main-aot.ts"
    ],

    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit" : true
    },

    "exclude": [
        "node_modules/*",
        "aot/*",
        "**/*-aot.ts"
    ]
}
